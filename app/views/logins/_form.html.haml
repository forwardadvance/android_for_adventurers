= form_for @login do |f|
  - if @login.errors.any?
    #error_explanation
      %h2= "#{pluralize(@login.errors.count, "error")} prohibited this login from being saved:"
      %ul
        - @login.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person_id
    = f.number_field :person_id
  .field
    = f.label :login_key
    = f.text_field :login_key
  .actions
    = f.submit 'Save'
