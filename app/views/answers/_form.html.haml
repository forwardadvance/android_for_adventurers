= form_for @answer do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person_id
    = f.number_field :person_id
  .field
    = f.label :completed_exercise_id
    = f.number_field :completed_exercise_id
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
