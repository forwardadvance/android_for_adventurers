= form_for @completed_exercise do |f|
  - if @completed_exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@completed_exercise.errors.count, "error")} prohibited this completed_exercise from being saved:"
      %ul
        - @completed_exercise.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :exercise_id
    = f.number_field :exercise_id
  .field
    = f.label :person_id
    = f.number_field :person_id
  .actions
    = f.submit 'Save'
